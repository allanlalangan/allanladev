---
import ThemeToggle from '../components/ThemeToggle.astro';
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			href="data:image/svg+xml,<svg style='background:black;borderRadius:100px' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='80' x='23' font-size='105' font-style='italic' fill='white'>ᾰ</text></svg>"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="bg-stone-300 text-gray-950 transition-colors dark:bg-gray-900 dark:text-gray-50 lg:grid lg:h-screen lg:grid-cols-12 lg:grid-rows-24"
	>
		<header
			class="col-start-7 row-span-1 row-start-1 flex items-center justify-end bg-stone-300 px-2 pt-2 dark:bg-gray-900 lg:col-span-8 lg:col-start-5 lg:pb-2"
		>
			<ThemeToggle />
		</header>
		<aside
			class="relative row-span-1 flex items-center justify-between border-stone-400 bg-stone-300 p-2 px-2 dark:border-gray-700 dark:bg-gray-900 lg:col-span-4 lg:col-start-1 lg:row-span-full lg:flex-col lg:justify-center lg:border-r lg:p-2"
		>
			<a
				href="/"
				class="z-10 flex-1 bg-stone-300 font-['Times_New_Roman'] text-4xl font-bold italic dark:bg-gray-900 lg:flex-initial lg:text-8xl"
				>ᾰ</a
			>
			<ul
				class="z-10 flex h-full flex-1 items-center justify-center gap-4 bg-stone-300 p-2 dark:bg-gray-900 lg:h-auto lg:flex-initial lg:flex-col lg:gap-2"
			>
				<li class="text-center underline-offset-2 hover:underline">
					<a href="#">about</a>
				</li>
				<li class="text-center underline-offset-2 hover:underline">
					<a href="#">projects</a>
				</li>
				<li class="text-center underline-offset-2 hover:underline">
					<a href="#">skills</a>
				</li>
			</ul>
			<ul
				id="socialLinks"
				class="absolute -bottom-12 left-0 flex h-12 w-full flex-1 items-center justify-center gap-4 opacity-100 transition-all lg:static lg:z-0 lg:mt-4 lg:h-auto lg:flex-initial lg:-translate-y-0 lg:border-none"
