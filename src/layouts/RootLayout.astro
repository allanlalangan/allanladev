			<div
				class="flex flex-1 items-center justify-end bg-stone-300 dark:bg-gray-900 lg:flex-initial"
			>
				<button
					class="z-10 bg-stone-300 transition dark:bg-gray-900 lg:hidden"
					id="menuToggle">socials</button
				>
			</div>
		</aside>
		<main
			id="mainContent"
			class="col-span-12 row-span-full row-start-2 mt-12 flex border-t border-stone-400 p-2 transition-all dark:border-gray-700 lg:col-span-8 lg:col-start-5 lg:mt-0 lg:overflow-y-scroll lg:border-t-0"
		>
			<slot />
		</main>
	</body>
</html>

<script is:inline>
const menuToggle = document.getElementById('menuToggle');
const socialLinks = document.getElementById('socialLinks');
const main = document.getElementById('mainContent');
const handleToggleMenu = () => {
	console.log(menuToggle);
	socialLinks.classList.toggle('-translate-y-full');
	main.classList.toggle('mt-12');
};

menuToggle.addEventListener('click', handleToggleMenu);
</script>
